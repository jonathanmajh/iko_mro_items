{
  "name": "iko_utility",
  "productName": "IKO Reliability Tool",
  "version": "3.2.1",
  "description": "Tool to help automate various Reliability Processes",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "repository": "https://github.com/jonathanmajh/iko_mro_items",
  "keywords": [],
  "author": {
    "name": "Jonathan Ma",
    "email": "jonathanmajh@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.5",
    "@electron-forge/maker-squirrel": "^6.0.1",
    "@electron-forge/maker-zip": "^6.0.1",
    "@electron-forge/publisher-github": "^6.0.1",
    "electron": "^19.1.3"
  },
  "dependencies": {
    "better-sqlite3": "^7.6.2",
    "electron-build": "^0.0.3",
    "electron-squirrel-startup": "^1.0.0",
    "exceljs": "^4.3.0",
    "lodash": "^4.17.0",
    "luxon": "^3.0.4"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "renderer/iko_logo.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "iko_utility",
            "setupIcon": "renderer/iko_logo.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "jonathanmajh",
              "name": "iko_mro_items",
              "draft": false,
              "prerelease": false
            }
          }
        }
      ]
    }
  }
}
